<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="Please Input Day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittextday"
        android:inputType="number"
        android:hint="Ex. Input days as numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Please Input Month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittextmonth"
        android:inputType="number"
        android:hint="Ex. Input months as numbers "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Please Input Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittextyear"
        android:inputType="number"
        android:hint="Ex. Input years as numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textviewoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttoncompute"
        android:text="COMPUTE"
        android:onClick="onClickCompute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
